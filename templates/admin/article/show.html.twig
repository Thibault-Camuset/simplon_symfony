{% extends 'admin/layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block content %}
    <div><h1>Article</h1>

    <table class="table table-striped articles">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ article.cover }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="primary d-flex justify-content-center"><a href="{{ path('article_index') }}" class="btn btn-primary">Retourner à la liste</a></div>

    <div class="primary d-flex justify-content-center"><a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning">Éditer</a></div>

    <div class="primary d-flex justify-content-center">{{ include('admin/article/_delete_form.html.twig') }}</div>
{% endblock %}
